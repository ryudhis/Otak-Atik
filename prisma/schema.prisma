// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Account {
  id            Int            @id @unique @default(sequence())
  email         String         @unique
  username      String         @unique
  password      String
  type          String
  kelasDiampu   kelas[]
  kelasDiambil  kelas[]        @relation("kelasDiambil") 
  diskusi       forumDiskusi[]
  kelasFavorite Int[]
  tutorFavorite Int[]
  commentForum  commentForum[]
  commentKelas  commentKelas[]
}

model kelas {
  id           Int            @id @unique @default(sequence())
  nama         String
  kategori     String
  materi       String[]
  spesifikasi  String[]
  metode       String[]
  jadwal       String[]
  owner        Account        @relation(fields: [ownerId], references: [id])
  ownerId      Int
  siswa        Account[]      @relation("kelasDiambil")
  commentKelas commentKelas[]
}

model forumDiskusi {
  id       Int            @id @unique @default(sequence())
  owner    Account        @relation(fields: [ownerId], references: [id])
  ownerId  Int
  title    String
  kategori String
  content  String
  postedAt String
  comment  commentForum[]
}

model commentForum {
  id             Int          @id @unique @default(sequence())
  owner          Account      @relation(fields: [ownerId], references: [id])
  ownerId        Int
  forumDiskusi   forumDiskusi @relation(fields: [forumDiskusiId], references: [id])
  forumDiskusiId Int
  content        String
  postedAt       String
}

model commentKelas {
  id       Int     @id @unique @default(sequence())
  owner    Account @relation(fields: [ownerId], references: [id])
  ownerId  Int
  kelas    kelas   @relation(fields: [kelasId], references: [id])
  kelasId  Int
  content  String
  postedAt String
}

model modul {
  id Int @unique @default(sequence())
}
